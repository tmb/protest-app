<h2>Upload images to <%= @protest.name %></h2>

<%= form_with(model: @protest, local: true, url: protests_upload_path, method: :post) do |form| %>
  <% if @protest.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@protest.errors.count, "error") %> prohibited these images from being saved:</h2>

      <ul>
      <% @protest.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= form.file_field :images, multiple: true %>
  </div>

  <div class="actions">
    <%= form.submit "Upload Images" %>
  </div>
<% end %>
